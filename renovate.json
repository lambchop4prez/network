{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":enablePreCommit"],
  "flux": {
    "fileMatch": ["^cluster/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["^cluster/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["^cluster/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
