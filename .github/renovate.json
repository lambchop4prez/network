{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended",
    ":enablePreCommit",
    "helpers:pinGitHubActionDigests"
  ],
  "flux": {
    "managerFilePatterns": ["/^cluster/.+\\.ya?ml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/^cluster/.+\\.ya?ml$/"]
  },
  "kubernetes": {
    "managerFilePatterns": ["/^cluster/.+\\.ya?ml$/"]
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
